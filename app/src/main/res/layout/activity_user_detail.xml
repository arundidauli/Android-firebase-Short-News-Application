<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddImage">
    <!--Created By Arun-->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorPrimary"
        android:foreground="#AA171616"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="16dp"
        android:layout_above="@id/sp_name"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:inputType="textMultiLine"
        android:layout_marginTop="@dimen/padding_8dp"/>

    <TextView
        android:id="@+id/sp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sp Name"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_above="@id/rpt_type"
        android:textAlignment="textStart"
        android:inputType="textMultiLine"
        android:layout_marginTop="@dimen/padding_8dp"/>
    <TextView
        android:id="@+id/rpt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="rpt Type"
        android:padding="16dp"
        android:textColor="@color/white"
        android:layout_above="@+id/card"
        android:textAlignment="textStart"
        android:inputType="textMultiLine"
        android:layout_marginTop="@dimen/padding_8dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4sp"
        android:layout_margin="@dimen/padding_8dp"
        app:cardUseCompatPadding="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/padding_8dp">
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:text="Back"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>